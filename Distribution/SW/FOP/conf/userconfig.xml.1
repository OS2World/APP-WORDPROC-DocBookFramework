<!DOCTYPE configuration SYSTEM "config.dtd" [
<!ENTITY fop.home "MyDocBookInstallDir/SW/FOP">
<!ENTITY fonts.dir "MyDocBookInstallDir/SW/FOP/fonts">
]>
<!-- 
	Replace all occurences of "MyDocBookInstallDir" with the absolute path
	of your DocBook Framework installation directory, e.g. "D:/SW/DocBookFramework".
	Future versions of the framework will modify this during installation.

     this file contains templates which allow an user easy 
     configuration of Fop. Actually normally you don't need this configuration 
     file, but if you need to change configuration, you should
     always use this file and *not* config.xml. 
     Usage: java org.apache.fop.apps.Fop -c userconfig.xml -fo fo-file -pdf pdf-file
-->


<configuration>

<!--  NOT IMPLEMENTED
basedir: normally the base directory is the directory where the fo file is 
         located. if you want to specify your own, uncomment this entry
-->
<!-- 
  <entry>
    <key>baseDir</key>
    <value></value>
  </entry>
-->

<!--
************************************************************************
                        HYPHENATION 
************************************************************************
-->
  
<!--
   hyphenation directory 
   if you want to specify your own directory with hyphenation pattern
   then uncomment the next entry and add the directory name
-->
  <entry>
    <key>hyphenation-dir</key>
    <value>MyDocBookInstallDir/SW/FOP/hyph</value>
  </entry>
<!--
************************************************************************
  Add fonts here
************************************************************************
-->

<fonts>
 <font metrics-file="&fop.home;/conf/times.xml" kerning="yes" embed-file="&fonts.dir;/times.ttf">
    <font-triplet name="TimesNewRoman" style="normal" weight="normal"/>
    <font-triplet name="serif" style="normal" weight="normal"/>
 </font>
 <font metrics-file="&fop.home;/conf/timesi.xml" kerning="yes" embed-file="&fonts.dir;/timesi.ttf">
    <font-triplet name="TimesNewRoman" style="italic" weight="normal"/>
    <font-triplet name="serif" style="italic" weight="normal"/>
 </font>
 <font metrics-file="&fop.home;/conf/timesbi.xml" kerning="yes" embed-file="&fonts.dir;/timesbi.ttf">
    <font-triplet name="TimesNewRoman" style="italic" weight="bold"/>
    <font-triplet name="serif" style="italic" weight="bold"/>
 </font>
 <font metrics-file="&fop.home;/conf/timesbd.xml" kerning="yes" embed-file="&fonts.dir;/timesbd.ttf">
    <font-triplet name="TimesNewRoman" style="normal" weight="bold"/>
    <font-triplet name="serif" style="normal" weight="bold"/>
 </font>

 <font metrics-file="&fop.home;/conf/arial.xml" kerning="yes" embed-file="&fonts.dir;/arial.ttf">
    <font-triplet name="Arial" style="normal" weight="normal"/>
    <font-triplet name="Helvetica" style="normal" weight="normal"/>
    <font-triplet name="sans-serif" style="normal" weight="normal"/>
 </font>
 <font metrics-file="&fop.home;/conf/ariali.xml" kerning="yes" embed-file="&fonts.dir;/ariali.ttf">
    <font-triplet name="Arial" style="italic" weight="normal"/>
    <font-triplet name="Helvetica" style="italic" weight="normal"/>
    <font-triplet name="sans-serif" style="italic" weight="normal"/>
 </font>
 <font metrics-file="&fop.home;/conf/arialbi.xml" kerning="yes" embed-file="&fonts.dir;/arialbi.ttf">
    <font-triplet name="Arial" style="italic" weight="bold"/>
    <font-triplet name="Helvetica" style="italic" weight="bold"/>
    <font-triplet name="sans-serif" style="italic" weight="bold"/>
 </font>
 <font metrics-file="&fop.home;/conf/arialbd.xml" kerning="yes" embed-file="&fonts.dir;/arialbd.ttf">
    <font-triplet name="Arial" style="normal" weight="bold"/>
    <font-triplet name="Helvetica" style="normal" weight="bold"/>
    <font-triplet name="sans-serif" style="normal" weight="bold"/>
 </font>

 <font metrics-file="&fop.home;/conf/cour.xml" kerning="yes" embed-file="&fonts.dir;/cour.ttf">
    <font-triplet name="CourierNew" style="normal" weight="normal"/>
    <font-triplet name="monospace" style="normal" weight="normal"/>
 </font>
 <font metrics-file="&fop.home;/conf/couri.xml" kerning="yes" embed-file="&fonts.dir;/couri.ttf">
    <font-triplet name="CourierNew" style="italic" weight="normal"/>
    <font-triplet name="monospace" style="italic" weight="normal"/>
 </font>
 <font metrics-file="&fop.home;/conf/courbi.xml" kerning="yes" embed-file="&fonts.dir;/courbi.ttf">
    <font-triplet name="CourierNew" style="italic" weight="bold"/>
    <font-triplet name="monospace" style="italic" weight="bold"/>
 </font>
 <font metrics-file="&fop.home;/conf/courbd.xml" kerning="yes" embed-file="&fonts.dir;/courbd.ttf">
    <font-triplet name="CourierNew" style="normal" weight="bold"/>
    <font-triplet name="monospace" style="normal" weight="bold"/>
 </font>

